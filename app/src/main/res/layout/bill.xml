<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="#eee"
    >

    <RelativeLayout
        android:id="@+id/rl_billlist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rl_bg_slc_white2gray_withborder"
        android:clickable="true"
         >

        <TextView
            android:id="@+id/tv_billlist_taskname"
            android:text="任务名称"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/text_black"
            android:textSize="14sp" />


        <TextView
            android:id="@+id/tv_billlist_taskmoney"
            android:layout_below="@id/tv_billlist_taskname"
            android:text="收入/支出：1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="22dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/text_black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_billlist_taskdate"
            android:layout_alignParentEnd="true"
            android:text="2017-12-04"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="22dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/text_content"
            android:textSize="12sp" />


        <TextView
            android:id="@+id/tv_billlist_taskstatus"
            android:layout_below="@id/tv_billlist_taskdate"
            android:layout_alignParentEnd="true"
            android:text="已支付/退款中/异常"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="22dp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/orange"
            android:textSize="14sp" />







    </RelativeLayout>

</RelativeLayout>