<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f4f4f4"
    tools:context="com.hitoncloud.near.Activity.AboutActivity">

    <!--顶部toolbar-->
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_about"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:navigationIcon="@mipmap/ic_back"
        android:theme="@style/ToolbarTheme"
        app:contentInsetEnd="0dp"
        app:contentInsetStart="0dp"
        app:navigationIcon="@mipmap/ic_back"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

    </android.support.v7.widget.Toolbar>


    <!--关于开发者-->
    <RelativeLayout
        android:id="@+id/rl_about_developer"
        android:layout_below="@+id/toolbar_about"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/rl_bg_slc_white2gray"
        android:clickable="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_about_developer"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@drawable/icon_developer"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="30dp"/>

        <TextView
            android:id="@+id/tv_about_developer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@+id/iv_about_developer"
            android:text="关于我们"
            android:textColor="@color/text_black"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/iv_about_developer_arrowright"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:src="@drawable/icon_arrowright" />

    </RelativeLayout>

    <!--关于开发者具体内容-->
    <RelativeLayout
        android:id="@+id/rl_about_developer_body"
        android:visibility="gone"
        android:layout_below="@+id/rl_about_developer"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="首个版本不是很稳定，请加群678470321以获取最新资讯，还可以反馈问题获得奖品哦~"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>






</RelativeLayout>
