<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    app:cardBackgroundColor="#fff"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/btn_list_item_bg"
        android:clickable="true"
        android:padding="5dp" >

        <ImageView
            android:id="@+id/communicityview_pic"
            android:src="@drawable/head1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/communicityview_name"
            android:layout_marginStart="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/communicityview_pic"
            android:text="故梦"
            android:textColor="#000"
            android:layout_marginTop="5dp"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/communicityview_content"
            android:layout_marginTop="5dp"
            android:text="测试一条新的信息"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/communicityview_name"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="4dp"
            android:textColor="#bbb"
            android:textSize="12sp" />
    </RelativeLayout>

</android.support.v7.widget.CardView>