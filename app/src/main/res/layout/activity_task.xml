<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_task_apply"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context="com.hitoncloud.near.Fragment.TaskFragment">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_task"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:weightSum="1"
        app:contentInsetEnd="0dp"
        app:contentInsetStart="0dp">

        <!--toolbar的内容-->
        <LinearLayout
            android:id="@+id/ll_task_topbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <!--选择学校-->
            <RelativeLayout
                android:id="@+id/rl_task_school"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:background="@drawable/slc_barbtn"
                android:clickable="true"
                android:gravity="center">



            </RelativeLayout>

            <!--标题-->
            <RelativeLayout
                android:id="@+id/rl_task_title"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">


                <TextView
                    android:id="@+id/tv_task_title"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="任务动态"
                    android:textColor="@color/title"
                    android:textSize="18sp" />

            </RelativeLayout>

            <!--占位用-->
            <RelativeLayout
                android:layout_width="34dp"
                android:layout_height="match_parent">

            </RelativeLayout>

            <!--搜索按钮-->
            <RelativeLayout
                android:id="@+id/rl_task_search"
                android:layout_width="46dp"
                android:layout_height="match_parent"
                android:background="@drawable/slc_barbtn"
                android:clickable="true"
                android:gravity="center">

                <ImageView
                    android:id="@+id/iv_task_search"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:clickable="false"
                    />
            </RelativeLayout>

        </LinearLayout>

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:id="@+id/linear2"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/toolbar_task"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:gravity="center"
        >
<FrameLayout
    android:layout_width="135dp"
    android:layout_height="match_parent"
    android:id="@+id/frameLayout1">
    <ImageView
        android:layout_width="135dp"
        android:layout_height="match_parent"
        android:background="@drawable/lbtnoff"
        android:id="@+id/leftbtn1" />
    <TextView
        android:id="@+id/ltxt1"
        android:layout_width="135dp"
        android:layout_height="match_parent"
        android:text="已发布"
        android:textSize="14sp"
        android:gravity="center"
        android:textColor="#000"
        />
</FrameLayout>
        <FrameLayout
            android:layout_width="135dp"
            android:layout_height="match_parent"
            android:id="@+id/frameLayout2">
            <ImageView
                android:layout_width="135dp"
                android:layout_height="match_parent"
                android:background="@drawable/rbtnon"
                android:id="@+id/rightbtn1" />
            <TextView
                android:id="@+id/rtxt1"
                android:layout_width="135dp"
                android:layout_height="match_parent"
                android:text="已接取"
                android:textSize="14sp"
                android:gravity="center"
                android:textColor="#fff"
                />
        </FrameLayout>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/taskarea"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/linear2"
        android:layout_marginTop="20dp"

        >

    </FrameLayout>



</RelativeLayout>
