<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff">
    <RelativeLayout
        android:id="@+id/rl_carditem_taskhelper_divider"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#eee">

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_carditem_taskhelper_top"
        android:layout_below="@id/rl_carditem_taskhelper_divider"
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <ImageView
            android:id="@+id/iv_carditem_taskhelper_publisher"
            android:layout_marginTop="7dp"
            android:layout_marginStart="10dp"
            android:layout_width="31dp"
            android:layout_height="31dp"
            android:src="@drawable/icon_card_taskhelper"
            />

        <TextView
            android:id="@+id/tv_carditem_taskhelper_publisher"
            android:textColor="#444"
            android:text="Near任务小助手"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/iv_carditem_taskhelper_publisher"
            android:layout_toEndOf="@id/iv_carditem_taskhelper_publisher"
            android:layout_marginStart="10dp"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/tv_carditem_taskhelper_publishtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/tv_carditem_taskhelper_publisher"
            android:textSize="12sp"
            android:text="07-09-16"
            android:layout_below="@+id/tv_carditem_taskhelper_publisher"/>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_carditem_taskhelper_body"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@+id/rl_carditem_taskhelper_top">

        <TextView
            android:id="@+id/tv_carditem_taskhelper_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="51dp"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:text="您的任务被人接取啦~"/>

        <TextView
            android:id="@+id/tv_carditem_taskhelper_acceptername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_carditem_taskhelper_title"
            android:layout_alignStart="@+id/tv_carditem_taskhelper_title"
            android:layout_marginTop="5dp"
            android:text="任务名：代买奶茶"/>

        <TextView
            android:id="@+id/tv_carditem_taskhelper_taskname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_carditem_taskhelper_acceptername"
            android:layout_alignStart="@+id/tv_carditem_taskhelper_title"
            android:layout_marginTop="5dp"
            android:text="接取者：叶沐"/>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_carditem_taskhelper_bottom"
        android:layout_below="@+id/rl_carditem_taskhelper_body"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:clickable="true">
        ">
        <TextView
            android:id="@+id/tv_carditem_taskhelper_details"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#f8f8f8"
            android:gravity="center"
            android:text="查看详情"/>


    </RelativeLayout>

</RelativeLayout>