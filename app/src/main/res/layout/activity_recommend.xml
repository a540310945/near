<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_recommend"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eee"
    tools:context="com.hitoncloud.near.com.hitoncloud.neara.Recommend">

    <!--商店图片-->
    <RelativeLayout
        android:id="@+id/recommend_linear1"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_alignParentTop="true">
        <!--顶部返回-->
        <LinearLayout
            android:id="@+id/recommend_linear2"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/recommend_back"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="20dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/back_white" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center"
                android:text="每日推荐"
                android:textColor="#ffffff"
                android:textSize="20sp" />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginRight="20dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/others" />
        </LinearLayout>
        <!--商店特色价格-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:background="#88000000">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:gravity="center"
                android:text="干锅香兔"
                android:textColor="#FFF"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:gravity="center"
                android:text="￥58"
                android:textColor="#FFF"
                android:textSize="16sp" />

        </LinearLayout>
    </RelativeLayout>

    <!--商店信息-->
    <LinearLayout
        android:id="@id/recommend_linear2"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/recommend_linear1"
        android:background="#fff"
        android:orientation="vertical">
        <!--商店名称及评价-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <TextView
                android:id="@+id/recommend_txt1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:text="香锅里辣干锅坊"
                android:textColor="#000"
                android:textSize="22sp" />

            <ImageView
                android:id="@+id/recommend_star1"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignStart="@+id/recommend_txt1"
                android:layout_below="@+id/recommend_txt1"
                android:layout_marginTop="11dp"
                android:src="@drawable/star_full" />

            <ImageView
                android:id="@+id/recommend_star2"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignTop="@id/recommend_star1"
                android:layout_below="@+id/recommend_txt1"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/recommend_star1"
                android:src="@drawable/star_full" />

            <ImageView
                android:id="@+id/recommend_star3"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignTop="@id/recommend_star1"
                android:layout_below="@+id/recommend_txt1"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/recommend_star2"
                android:src="@drawable/star_full" />

            <ImageView
                android:id="@+id/recommend_star4"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignTop="@id/recommend_star1"
                android:layout_below="@+id/recommend_txt1"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/recommend_star3"
                android:src="@drawable/star_full" />

            <ImageView
                android:id="@+id/recommend_star5"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignTop="@id/recommend_star1"
                android:layout_below="@+id/recommend_txt1"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/recommend_star4"
                android:src="@drawable/star_full" />

            <TextView
                android:id="@+id/recommend_renjun"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/recommend_star5"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/recommend_star5"
                android:text="人均:￥"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/recommend_renjun"
                android:layout_toRightOf="@+id/recommend_renjun"
                android:text="28"
                android:textSize="14sp" />


            <!--关注与收藏-->
            <ImageView
                android:id="@+id/recommend_star_empty"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:layout_marginTop="35dp"
                android:src="@drawable/star_empty" />

            <ImageView
                android:id="@+id/recommend_heart_empty"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignTop="@id/recommend_star_empty"
                android:layout_marginRight="15dp"
                android:layout_toLeftOf="@id/recommend_star_empty"
                android:src="@drawable/heart_empty" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/recommend_heart_empty"
                android:layout_below="@+id/recommend_heart_empty"
                android:text="关注"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/recommend_star_empty"
                android:layout_below="@+id/recommend_star_empty"
                android:text="收藏"
                android:textSize="14sp" />

        </RelativeLayout>

        <!--商店地址-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentStart="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:src="@drawable/location_big" />

            <TextView
                android:id="@+id/recommend_address"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="40dp"
                android:gravity="center_vertical"
                android:text="都江堰青城山成都东软学院后街第二条街（香锅里辣店）"
                android:textColor="#444"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10dp"
                android:src="@drawable/phone" />


        </LinearLayout>

    </LinearLayout>

    <!--其它菜品-->
    <LinearLayout
        android:id="@+id/recommend_linear3"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/recommend_linear2"
        android:layout_marginTop="10dp"
        android:background="#fff">

        <TextView
            android:id="@+id/recommend_icon_tui"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:textSize="14dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:background="@color/qingse"
            android:text="推"
            android:textColor="#fff"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:text="其它菜品"
            android:textColor="#000"/>

    </LinearLayout>

    <!--其它菜品listview-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#fff"
        android:layout_below="@+id/recommend_linear3">

        <ListView
            android:id="@+id/recommend_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:entries="@array/recommend">


        </ListView>
    </LinearLayout>




