<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_leftmonry"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hitoncloud.near.mine.Leftmoney">

    !--头部-->

    <LinearLayout
        android:id="@+id/leftmoeny_linear1"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/qingse"
        android:orientation="horizontal">
        <!--返回按钮触碰区-->
        <LinearLayout
            android:id="@+id/ll_leftmoney_back"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_marginStart="0dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/TaskGet_back"
                android:layout_width="15dp"
                android:layout_height="20dp"
                android:src="@drawable/back_white" />

        </LinearLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="40dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="余额"
            android:textColor="#fff"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/my_leftmoney"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/leftmoeny_linear1"
        android:layout_marginTop="60dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/leftmoney" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="¥0.00"
            android:textSize="36sp" />

        <Button
            android:id="@+id/withdraw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/rs_select_btn_red"
            android:text="余额提现"
            android:clickable="true"
            android:textColor="@color/white"
            android:textSize="20sp" />
    </LinearLayout>


</RelativeLayout>
