<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="#fff"
    >
    <RelativeLayout
        android:id="@+id/cardview_relative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_list_item_bg"
        android:clickable="true"
        android:padding="5dp" >

        <ImageView
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:id="@+id/cardview_redcircle"
            android:src="@drawable/circle_red"
            android:layout_margin="10dp"/>

        <TextView
            android:clickable="false"
            android:id="@+id/cardview_name"
            android:text="请输入任务名字"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@+id/cardview_redcircle"
            android:textColor="#000"
            android:textSize="15sp" />
        <ImageView
            android:id="@+id/cardview_moneyimg"
            android:src="@drawable/money"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="3dp"
            android:layout_toEndOf="@+id/cardview_name"
            android:scaleType="centerCrop" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:layout_marginStart="2dp"
            android:layout_marginTop="2dp"
            android:id="@+id/cardview_money"
            android:layout_toEndOf="@+id/cardview_moneyimg"
            android:textColor="#fb0"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cardview_time"
            android:text="2017.7.1"
            android:textColor="#bbb"
            android:textSize="10sp"
            android:layout_marginTop="3dp"
            android:layout_alignLeft="@+id/cardview_name"
            android:layout_below="@+id/cardview_name"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cardview_text1"
            android:text="该任务由"
            android:layout_marginTop="5dp"
            android:textColor="#000"
            android:layout_alignStart="@id/cardview_time"
            android:layout_below="@+id/cardview_time"/>

        <TextView
            android:clickable="false"
            android:id="@+id/cardview_putter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginStart="2dp"
            android:layout_below="@id/cardview_time"
            android:layout_toEndOf="@+id/cardview_text1"
            android:textColor="#0ef"
            android:text="admin"
           />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cardview_text2"
            android:text="发布"
            android:layout_marginTop="5dp"
            android:layout_marginStart="2dp"
            android:textColor="#000"
            android:layout_toEndOf="@id/cardview_putter"
            android:layout_below="@+id/cardview_time"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>