<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="#eee"
    >

    <RelativeLayout
        android:id="@+id/rl_searchdetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rl_bg_slc_white2gray_withborder"
        android:clickable="true"
         >

        <TextView
            android:id="@+id/tv_searchdetails_taskname"
            android:text="请输入任务名字"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/text_black"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/iv_searchdetails_money"
            android:src="@drawable/money"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_alignTop="@+id/tv_searchdetails_taskname"
            android:layout_toEndOf="@+id/tv_searchdetails_taskname"
            android:layout_marginStart="5dp"
            android:layout_marginTop="2dp"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/tv_searchdetails_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0元"
            android:layout_marginStart="5dp"
            android:layout_alignTop="@+id/tv_searchdetails_taskname"
            android:layout_toEndOf="@+id/iv_searchdetails_money"
            android:textColor="@color/orange"
            />

        <TextView
            android:id="@+id/tv_searchdetails_time_key"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="任务时间："
            android:textColor="@color/text_content"
            android:textSize="10sp"
            android:layout_marginTop="2dp"
            android:layout_marginStart="1dp"
            android:layout_alignStart="@id/tv_searchdetails_taskname"
            android:layout_below="@id/tv_searchdetails_taskname"/>

        <TextView
            android:id="@+id/tv_searchdetails_time_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:ellipsize="marquee"
            android:textColor="@color/text_content"
            android:textSize="10sp"
            android:layout_alignTop="@id/tv_searchdetails_time_key"
            android:layout_toEndOf="@id/tv_searchdetails_time_key"/>

        <TextView
            android:id="@+id/tv_searchdetails_loc_key"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="任务地点："
            android:textColor="@color/text_content"
            android:textSize="10sp"
            android:layout_marginTop="2dp"
            android:layout_alignStart="@id/tv_searchdetails_time_key"
            android:layout_below="@id/tv_searchdetails_time_key"/>

        <TextView
            android:id="@+id/tv_searchdetails_loc_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/text_content"
            android:textSize="10sp"
            android:layout_alignTop="@id/tv_searchdetails_loc_key"
            android:layout_toEndOf="@id/tv_searchdetails_loc_key"/>

        <TextView
            android:id="@+id/tv_searchdetails_nickname_key"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="发布人员："
            android:textColor="@color/text_content"
            android:textSize="10sp"
            android:layout_marginTop="2dp"
            android:layout_alignStart="@id/tv_searchdetails_loc_key"
            android:layout_below="@id/tv_searchdetails_loc_key"/>

        <TextView
            android:id="@+id/tv_searchdetails_nickname_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="你的昵称"
            android:textColor="@color/theme"
            android:textSize="10sp"
            android:layout_alignTop="@id/tv_searchdetails_nickname_key"
            android:layout_toEndOf="@id/tv_searchdetails_nickname_key"/>

        <TextView
            android:id="@+id/tv_searchdetails_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="等待接取"
            android:textColor="@color/orange"
            android:textSize="12sp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="11dp"
            android:layout_alignParentEnd="true"

            />

        <Button
            android:id="@+id/btn_searchedetails_grab"
            android:background="@drawable/btn_radius_orange"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="13dp"
            android:layout_marginTop="50dp"
            android:layout_width="60dp"
            android:layout_height="20dp"
            android:text="去抢单"
            android:textSize="10sp"
            android:textColor="@color/white"/>





    </RelativeLayout>

</RelativeLayout>