        <!--<item name="android:windowFullscreen">false</item>-->
        <!--<item name="windowNoTitle">true</item>-->
        <!--&lt;!&ndash;<item name="android:windowIsTranslucent">false</item>&ndash;&gt;-->
        <!--&lt;!&ndash;<item name="android:windowDisablePreview">true</item>&ndash;&gt;-->
    <!--</style>-->

    <style name="MyEditText" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">#ddd</item>
        <item name="colorControlActivated">#01dddd</item>
    </style>

    <!--三角-->
    <declare-styleable name="Triangleview">
        <!--声明我们的属性，名称为color,取值类型为颜色）-->
        <attr name="color" format="color" />
    </declare-styleable>


    <style name="time_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@color/background</item>
    </style>


</resources>
